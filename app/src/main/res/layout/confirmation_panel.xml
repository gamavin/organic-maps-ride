<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="?cardBackground"
    android:orientation="vertical"
    android:padding="@dimen/margin_base"
    android:elevation="10dp">

  <TextView
      android:id="@+id/tv_confirm_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Set Destination"
      style="@style/MwmTextAppearance.Title"
      android:layout_marginBottom="@dimen/margin_half"/>

  <TextView
      android:id="@+id/tv_confirm_address"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Loading address..."
      style="@style/MwmTextAppearance.Body3"
      android:layout_marginBottom="@dimen/margin_base"/>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_confirm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Choose This Destination"
      style="@style/MwmWidget.Button.Primary"/>

</LinearLayout>